! =============================================================================
! ============================== XTERM CONFIG =================================
! =============================================================================

! Unicode support
xterm*utf8: 1

! Color support
xterm*customization: -color
xterm*termName: xterm-256color

! Font settings
xterm*allowBoldFonts: false
xterm*faceName: Meslo LG S DZ for Powerline:Bold

! Font size
xterm*faceSize: 10

! For inclusion of all necessary environment variables
xterm*loginShell: true

! Scrollback setting
xterm*savelines: 10000

! Disable right scrollbar
xterm*ScrollBar: false

! Stop output to terminal from jumping down to bottom of scroll again
xterm*scrollTtyOutput: false

! Save selections to clipboard
xterm*selectToClipboard: true

! Apply included colors
xterm*color0:      Ansi_0_Color
xterm*color1:      Ansi_1_Color
xterm*color2:      Ansi_2_Color
xterm*color3:      Ansi_3_Color
xterm*color4:      Ansi_4_Color
xterm*color5:      Ansi_5_Color
xterm*color6:      Ansi_6_Color
xterm*color7:      Ansi_7_Color
xterm*color8:      Ansi_8_Color
xterm*color9:      Ansi_9_Color
xterm*color10:     Ansi_10_Color
xterm*color11:     Ansi_11_Color
xterm*color12:     Ansi_12_Color
xterm*color13:     Ansi_13_Color
xterm*color14:     Ansi_14_Color
xterm*color15:     Ansi_15_Color
xterm*colorBD:     Bold_Color
xterm*colorIT:     Italic_Color
xterm*colorUL:     Underline_Color
xterm*foreground:  Foreground_Color
xterm*background:  Background_Color
xterm*cursorColor: Cursor_Color


! ------------------------------------------------------------------------------
! ROFI Color theme
!rofi.key-run: SuperL+space
!rofi.key-i2: SuperL+shift+space
!rofi.font: Source Code Pro for Powerline, Font Awesome 10 
rofi.fuzzy: true


! bordercolor
rofi.bc: #A6E22E

! normal
rofi.bg: Background_Color
rofi.bg-active: #272822
rofi.bg-urgent: #272822
 
rofi.fg: #F8F8F2
rofi.fg-active: #A6E22E
rofi.fg-urgent: #F92672

! highlight
rofi.hlbg: #303030
rofi.hlbg-active: #303030
rofi.hlbg-urgent: #303030

rofi.hlfg: #F92672
rofi.hlfg-active: #F92672
rofi.hlfg-urgent: #F92672

!rofi.sidebar-mode: true

